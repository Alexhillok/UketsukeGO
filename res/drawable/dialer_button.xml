<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FDD017"
                android:endColor="#C68E17"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#ADA96E" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FBB117"
                android:startColor="#C35617"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#7F462C" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#8EEBEC"
                android:startColor="#3B9C9C"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#566D7E" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
